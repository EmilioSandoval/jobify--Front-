<body>
     <% if (typeof successRegister !== 'undefined' && successRegister) { %>
          <script>
              alert('Registro exitoso, inicia sesión');
          </script>
      <% } %>
         <!-- Encabezado de pagina. -->
         <header class="header" id="header">
            <!-- Contenedor de la navegacion. -->
            <nav class="navRL container">
               <a href="/" class="nav__logo">Jobify</a>
                 <a href="/" class="nav__logo">
                    <img src="IMAGES/JBY.png" alt="Jobify Logo" style="height: 63px;">
                 </a>
      </nav>
      </header>
<!--===== Pagina Principal =====-->
<main class="main">
     <!--====== Seccion de Inicio =====-->
     <section class="home">
          <div class="home__container">
               <div class="home__data">
                    <form class="form" action="/empleador-login" method="POST" style="padding: 40px 50px;">
                         <h1>Iniciar sesión como empleador</h1>

                         <div class="input-box">
                              <i class="ri-user-fill"></i>
                              <input class="inputs" type="email" id="email" name="email" required class="emailInput"  placeholder="Correo electronico">
                              <label for="email">Correo electronico</label>
                         </div>
                         <div class="input-box">
                              <i class="ri-lock-2-fill"></i>
                              <input class="inputs" type="password" id="password" name="password" required class="passwordInput"  placeholder="Contraseña">
                              <label for="password">Contraseña</label>
                              </div>
                         <% if (typeof loginExitoso !== 'undefined' && !loginExitoso) { %>
                              <p style="color: red; font-weight: bold;">Correo o contraseña incorrectos. Por favor, inténtalo de nuevo.</p>
                          <% } %>
                         <div class="remember-forgot">
                              <label for=""><input type="checkbox">Recuerdame</label>
                         </div>
                         <button type="submit" class="btn">Iniciar sesión</button>
                         <div class="register-link">
                              <p>No tienes una cuenta?<a href="/empleador-registro"> Registrate</a></p>
                         </div>
                     </form>
                    <div class="tarjeta">
                         <div class="titulo">Funciones de un empleador.</div>
                         <div class="cuerpo">
                         <img src="IMAGES\CEO.jpg" alt="Empleador modelo (Jobify)">
                         </div>
                         <div class="pie">
                              <a href="#" class="arrow">Más información</a> 
                                   <div class="contenido-oculto">
                                        Un empleador es aquel que tiene la capacidad de ofrecer y administrar vacantes, la cuales deben ser transparentes y claras para cualquier usuario que desee postularse para la misma.<br>Al igual que se deben de administrar y monitorear los candidatos para las mismas y darles la retroalimentacion que necesiten.
                                   </div>
                         </div>
                    </div>
               </div>
          </div>
     </section>
</main>
