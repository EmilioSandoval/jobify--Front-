      <script>

            function eliminarCuenta() {
                    // Aquí puedes realizar una confirmación antes de enviar la solicitud
                    if (confirm('¿Estás seguro de que deseas eliminar esta cuenta para siempre?')) {
                        document.getElementById("empleadorAccountForm").action = '/empleador-account-delete';
                        document.getElementById("empleadorAccountForm").submit();
                    }
                }

            window.onload = function() {
                const a = document.getElementById('1');
                const b = document.getElementById('2');
                const c = document.getElementById('3');
                const d = document.getElementById('4');
                const e = document.getElementById('5');
                const f = document.getElementById('6');
                const g = document.getElementById('7');
                const h = document.getElementById('8');


                const editBtn = document.getElementById('editBtn');
                const saveBtn = document.getElementById('saveBtn');
            
                // Agrega un event listener al botón
                editBtn.addEventListener('click', function() {
                    // Verifica si los inputs están deshabilitadosc 
                    if (a.disabled) {
                        // Si están deshabilitados, habilítalos
                        a.disabled = false;
                        b.disabled = false;
                        c.disabled = false;
                        d.disabled = false;
                        e.disabled = false;
                        f.disabled = false;
                        g.disabled = false;
                        h.disabled = false;

                        saveBtn.disabled = false

                    } else {
                        // Si están habilitados, deshabilítalos
                        a.disabled = true;
                        b.disabled = true;
                        c.disabled = true;
                        d.disabled = true;
                        e.disabled = true;
                        f.disabled = true;
                        g.disabled = true;
                        h.disabled = true;

                        editBtn.textContent = 'Editar información';
                    }
                });
            };


      </script>

