                        </tr> 
                        <tr>
                            <td><label for="5">Fecha de nacimiento:</label></td>
                            <td><input id="5" class="inputs" type="text" name="userBirthday" value="<%= userBirthday %>" disabled ></td>
                        </tr> 
                        <tr>                
                            <td><label for="6">Edad:</label></td>
                            <td><input id="6" class="inputs" type="text" name="userAge" value="<%= userAge %>" disabled ></td>
                        </tr> 
                        <tr>                
                            <td><label for="7">Domicilio:</label></td>
                            <td><input id="7" class="inputs" type="text" name="userAddress" value="<%= userAddress %>" disabled ></td>
                        </tr>
                        <tr>                
                            <td><label for="8">Numero de telefono:</label></td>
                            <td><input id="8" class="inputs" type="text" name="phoneNumber" value="<%= phoneNumber %>" disabled ></td>
                        </tr>
                        <tr>                
                            <td><label for="9">Fecha de registro:</label></td>
                            <td><textarea id="9" class="inputs" type="text" name="email" disabled cols="18" rows="4"><%= userRegisterDate %></textarea></td>
                        </tr>
                            <td>
                                <button id="saveBtn" type="submit" class="btn" disabled >Guardar</button>    
                            </td>
                            <td>
                                <button id="deleteBtn" class="btn" type="button" disabled>Eliminar Perfil</button>
                            </td>
                            <td>
                                <button id="editBtn" class="btn" type="button" >Editar información</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
            

